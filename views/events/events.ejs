<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Events</title>
</head>
<body>
  <div class="container">
    <h1 class="mt-5">Dashboard</h1>

    <p>Events (<%= user.role %>)</p>

    <div class="text-center">
      <h2>Events</h2>
    </div>
    <br>

    <table class="table table-hover small text-center">
      <thead>
        <tr>
          <th width="100">Event Name</th>
          <th width="100">Event Date</th>
          <th width="50">Location</th>
          <% if (user.role === 'admin') { %>
            <th>Edit</th>
            <th>Delete</th>
          <% } %>
        </tr>
      </thead>
      <tbody>
        <% for (let i = 0; i < events.length; i++) { %>
          <tr>
            <td>
              <a href="/eventname/<%= events[i].id %>">
                <%= events[i].name %>
              </a>
            </td>
            <td><%= events[i].date %></td>
            <td><%= events[i].location %></td>
            <% if (user.role === 'admin') { %>
              <td>
                <a href="/editEvent/<%= events[i].id %>">Edit</a>
              </td>
              <td>
                <a href="/deleteEvent/<%= events[i].id %>" onclick="return confirm('Are you sure you want to delete this event?');">Delete</a>
              </td>
            <% } %>
          </tr>
        <% } %>
      </tbody>
    </table>

    <a href="/dashboard" class="btn btn-primary">Dashboard</a>
    <% if (user.role === 'admin') { %>
      <a href="/events/new" class="btn btn-primary">Add events</a>
    <% } %>
  </div>
</body>
</html>
