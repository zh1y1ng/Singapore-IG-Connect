<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
    rel="stylesheet"
  />
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Events</title>

  <style>
    /* 🔧 Background image */
    body {
      background-image: url('/image/events_background1.png'); /* change path if needed */
      background-size: cover;
      background-repeat: no-repeat;
      background-position: center center;
      background-attachment: fixed;
    }

    /* 🔧 Navbar link hover effect */
    nav a:hover {
      text-decoration: underline !important;
    }
  </style>
</head>

<body>

  <!-- 🔰 Navigation Bar -->
  <nav style="position: fixed; top: 0; width: 100%; background-color: transparent; padding: 15px 30px; z-index: 1000;">
    <div style="display: flex; justify-content: space-between; align-items: center;">
      <div style="flex: 1; text-align: left;">
        <a href="/" style="color: black; font-size: 20px; font-family: 'Montserrat'; font-weight: bold; text-decoration: none;">
          Singapore IG Connect
        </a>
      </div>

      <div style="position: absolute; left: 50%; transform: translateX(-50%); display: flex; gap: 20px;">
        <a href="/interestgroups" style="color:#FE3E4D; text-decoration: none; font-weight: normal; font-size:15px;">Interest Groups</a>
        <a href="/IGmembers" style="color:#FE3E4D; text-decoration: none; font-weight: normal; font-size:15px;">IG Members</a>
        <a href="/IGevents" style="color:#FE3E4D; text-decoration: none; font-weight: normal; font-size:15px;">IG Events</a>
        <a href="/schools" style="color:#FE3E4D; text-decoration: none; font-weight: normal; font-size:15px;">School Directory</a>
        <a href="/studentprofiles" style="color:#FE3E4D; text-decoration: none; font-weight: normal; font-size:15px;">Student Profiles</a>
        <a href="/IGgalleries" style="color:#FE3E4D; text-decoration: none; font-weight: normal; font-size:15px;">IG Galleries</a>
      </div>
    </div>
  </nav>

  <!-- 🧾 Main Content -->
  <div class="container" style="padding-top: 110px;">


    <div class="text-center mb-4">
      <h2>Events</h2>
    </div>

    <!-- 🔍 Search Form -->
    <form action="/search-events" method="GET" class="mb-4 d-flex justify-content-center">
      <input
        type="text"
        name="query"
        class="form-control w-50 me-2"
        placeholder="Search events by name or location"
        required
      />
      <button type="submit" class="btn btn-outline-primary">Search</button>
    </form>

    <!-- 🔍 Display Search Term -->
    <% if (typeof searchTerm !== 'undefined') { %>
      <p class="text-center">Showing results for "<%= searchTerm %>"</p>
    <% } %>

    <!-- 📅 Events Grid -->
    <div class="row g-4">
      <% for (let i = 0; i < events.length; i++) { %>
        <div class="col-md-4"> 
          <div class="card h-100">
            <% if (events[i].image) { %>
              <img
                src="/uploads/<%= events[i].image %>"
                class="card-img-top"
                alt="Event Image"
                style="height: 180px; object-fit: cover;"
              />
            <% } %>
            <div class="card-body d-flex flex-column">
              <h5 class="card-title">
                <a href="/eventname/<%= events[i].id %>" class="text-decoration-none">
                  <%= events[i].name %>
                </a>
              </h5>
              <p class="card-text mb-1"><strong>Date:</strong> <%= events[i].date.toISOString().split('T')[0] %></p>
              <p class="card-text mb-3"><strong>Location:</strong> <%= events[i].location %></p>

              <% if (user.role === 'admin') { %>
                <div class="mt-auto d-flex justify-content-between">
                  <a href="/editEvent/<%= events[i].id %>" class="btn btn-sm btn-warning">Edit</a>
                  <a
                    href="/deleteEvent/<%= events[i].id %>"
                    class="btn btn-sm btn-danger"
                    onclick="return confirm('Are you sure you want to delete this event?');"
                  >
                    Delete
                  </a>
                </div>
              <% } %>
            </div>
          </div>
        </div>
      <% } %>
    </div>

    <!-- 🔙 Navigation Buttons -->
    <div class="mt-4">
      <a href="/dashboard" class="btn btn-primary">Dashboard</a>
      <% if (user.role === 'admin') { %>
        <a href="/events/new" class="btn btn-success ms-2">Add Event</a>
      <% } %>
    </div>
  </div>

</body>
</html>
