<div class="bg-fullpage" style="background-image: url('/image/gallery_background.png')"></div>
 
<div class="container content-wrapper" style="max-width: 600px;">
<h2 class="mb-4" style="color: black">Edit Gallery Item</h2>
 
  <form action="/galleries/<%= gallery.id %>" method="POST">
<div class="mb-3">
<label for="ig_id" class="form-label">Instagram Post ID</label>
<input

        type="text"

        class="form-control"

        id="ig_id"

        name="ig_id"

        value="<%= gallery.ig_id %>"

        required
>
</div>
 
    <div class="mb-3">
<label for="media_url" class="form-label">Media URL</label>
<input

        type="url"

        class="form-control"

        id="media_url"

        name="media_url"

        value="<%= gallery.media_url %>"

        required
>
</div>
 
    <% if (gallery.media_url) { %>
<div class="mb-3">
<label class="form-label" style="color: black">Current Media Preview</label><br>
<img src="<%= gallery.media_url %>" alt="Preview" class="img-thumbnail mb-2" style="max-width: 150px;">
</div>
<% } %>
 
    <div class="mb-3">
<label for="caption" class="form-label">Caption</label>
<textarea

        class="form-control"

        id="caption"

        name="caption"

        rows="3"

        required
><%= gallery.caption %></textarea>
</div>
 
    <div class="mb-3">
<label for="upload_date" class="form-label">Upload Date</label>
<input

        type="date"

        class="form-control"

        id="upload_date"

        name="upload_date"

        value="<%= gallery ? formatDateLocal(gallery.upload_date) : '' %>"

        required
>
</div>
 
    <button type="submit" class="btn btn-warning me-2">Update</button>
<a href="/galleries" class="btn btn-secondary">Cancel</a>
</form>
</div>
 
