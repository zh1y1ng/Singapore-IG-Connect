<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Quicksand&display=swap" rel="stylesheet">
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
        <title>Singapore IG Connect</title>
    </head>
<style>
    body {
        background-image: url('/image/loginregister_background.png'); 
        background-size: cover;        
        background-repeat: no-repeat;   
        background-position: center;  
        margin: 0;
        height:100vh;
    }

    .login-container {
            background-color: rgba(255, 255, 255, 0.9);
            padding: 30px;
            border-radius: 15px;
            box-shadow: 0 0 15px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 400px;
        }

        h2 {
            font-family: 'Montserrat';
            font-weight: bold;
            font-size: 60px;
            margin-top:-160px;
            margin-bottom: 70px;
        }

        .success-message-box {
            background-color: #d4edda; 
            border: 1px solid #c3e6cb; 
            color: #155724; 
            padding: 10px 20px;
            border-radius: 8px;
            max-width: 400px;
            margin-bottom: 20px;
        }

        .success-message-text {
            font-size: 18px;
            font-weight: 500;
            font-family: 'Lato', sans-serif;
        }

        form {
            font-family: 'Quicksand', sans-serif;
        }

        form label {
            font-weight: bold;
        }

        .back-arrow {
            font-size: 24px;
            line-height: 1;
            margin-top: -8px; /* Adjust if needed to align */
            padding: 4px 10px;
}
</style>
<body>
    <div class="d-flex justify-content-center align-items-center min-vh-100">
        <div class="text-center" style="width:100%; max-width: 400px; margin-top: -100px;">

        <div class="d-flex justify-content-center align-items-center mb-4" style="gap: 12px;">
        <a href="/" class="btn btn-outline-secondary btn-sm d-flex align-items-center justify-content-center" style=" margin-left: -50px; font-size: 22px; height: 25px; width: 40px; padding: 0;">&#8592;</a>
        <h2 class="mb-0" style="font-size: 70px; margin-top: 0;">Login</h2>
        </div>


            <% if (messages && messages.length > 0) { %>
                <div class="success-message-box mx-auto text-center">
                    <% messages.forEach(function(message) { %>
                        <p class="success-message-text mb-0"><%= message %></p>
                    <% }); %>
                </div>
            <% } %>

        <div class="login-container text-start">
            <form action="/login" method="POST">
                <div class="input-wrapper text-center">
                <label for="email">Email:</label><br>
                <input type="text" id="email" name="email" required><br><br>

                <label for="password">Password:</label><br>
                <input type="password" id="password" name="password" required><br><br>
                </div>
                
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-primary">Login</button>
            </div>
            </form>

            <% if (errors && errors.length > 0) { %>
                <div class="alert alert-danger mt-3">
                    <% errors.forEach(function(error) { %>
                        <p><%= error %></p>
                    <% }) %>
                </div>
            <% } %>

        </div>
        </div>
    </div>
</body>
</html>